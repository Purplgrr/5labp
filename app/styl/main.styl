bgcol = #164B69 
centralcol = #E3E3E3
curcol = #DCDCDC
fsiii = 14px
max-wid = 600px

marg(size, col)
	margin size
	padding col	

html 
	background-color: bgcol
	p 
		font-family: "Arial"
		font-size: fsiii
		text-align: justify
		line-height: 2
		text-indent: 40px
		word-spacing: 10px
head, body
	background-color: bgcol
	marg(20px, 0px)

	div 
		height: auto
		width: auto 
		marg(0px, 2px)

	a
		display: inline-block

	.menu, .nav, .main, .content, .text1, .text2, .image, .video
		//border: solid 1px black 

	.menu
		background-color: centralcol 
		font-weight: bold
		
	.active
		background-color: curcol	

	.nav
		display: grid
		background-color: inherit 
		grid-template-rows: max-content 
		grid-template-columns: repeat(6, max-content)
		justify-content: center
		a
			display: grid
			padding: 5px 20px
			margin: 3px
			color: black
	
			&:hover
				background-color: curcol
				text-decoration: none

	@media (max-width: max-wid)
		.nav
			grid-template-rows: repeat(3, auto)
			grid-template-columns: repeat(2, auto)
			text-align: left
	
	.main 
		width: 5px auto
		marg(0px, 15px)
		background-color: centralcol

	.container, .text1, .text2, .image
		display: grid
		background-color: inherit 

	.container
		grid-template-rows: repeat(max-content, 2)
		grid-template-columns: 1fr max-content

	.text1
		grid-column: 1/3

	.text2
		grid-row: 2
		grid-column: 1

	.image
		grid-row: 2
		grid-column: 2
		img
			margin: auto 10px
			
	.video
		marg(0px, 10px)
		padding-bottom: 5px
		iframe
			//width="893" height="670" 
			display: block
			margin: auto
			$wid = 1vw * 100 * (2 / 3)
			width: $wid 
			height: 1vw * (($wid * 670)/893)
	

	@media (max-width: max-wid)
		p 
			font-size: 12px
			line-height: 1.7

		.container, .text1, .text2, .image
			box-sizing: border-box

		.container
			grid-template-rows: repeat(auto, 3)
			grid-template-columns: auto 

		.image
			grid-row: 2
			grid-column: 1
			margin 5px
			img
				margin: auto 

		.text1
			grid-row: 1
			grid-column: 1
			margin 5px

		.text2
			grid-row: 3
			grid-column: 1
			margin 5px

		.video iframe
			$wid = 1vw * 86
			width: $wid 
			height: 1vw * (($wid * 670)/893)
	
	// Page 2:

	.container1, .image2, .text3, .text4, img
		//border: solid 1px black 

	.container1, .image2, .text3, .text4
		display grid

	.container1 
		grid-template-rows: repeat(auto, 3)
		grid-template-columns: auto 

	.image2
		display flex
		flex-direction row
		width 100%
		text-align center
		margin 15px 0px
		&-item
			width 33.33%
			
		img
			margin: 10px auto

	.noInd
		p
			text-indent: 0px

	.text3
		grid-row: 2
		grid-column: 1

	.text4
		grid-row: 3
		grid-column: 1

	@media (max-width: max-wid)
		.image2	
			display: block
			width: 80%
			margin: auto
			img				
				display: block
				width: 100%
				margin: 20px auto
	
	// Page 3

	.container2, .img1, .img2, .img3, .text1, .text2,  .text3  
		display: grid

	.container2
		display: grid
		grid-template-rows: repeat(6, 0.2fr)
		grid-template-columns: repeat(22, 1fr)
		

	img
		padding: 10px
		margin: auto
		height: 100%
		width: 100%
		object-fit: fill
		overflow: hidden		

	.img1
		grid-column:2/12
		grid-row:2/4

	.img2
		grid-column:12/22
		grid-row:2/3

	.img3
		grid-column:12/22
		grid-row:3/4

	.text11
		grid-column:2/12
		grid-row:4/5
		background-color: curcol
		padding: 10px
		margin: 10px 10px

	.text22
		grid-column:2/12
		grid-row:5/6
		background-color: curcol
		padding: 10px
		margin: 10px 10px
		//object-fit: fill

	.text33
		grid-column:12/22
		grid-row:4/6
		background-color: curcol
		padding: 10px
		margin: 10px 10px
   
